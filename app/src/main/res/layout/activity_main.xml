<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <dora.widget.DoraRedDotView
        android:id="@+id/redDotView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dora_redDotGravity="rightUp"
        app:dora_redDotRadius="10dp"
        app:dora_redDotVerticesOffset="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <dora.widget.DoraRedDotView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dora_redDotGravity="rightBottom"
        app:dora_redDotRadius="10dp"
        app:dora_redDotVerticesOffset="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <dora.widget.DoraRedDotView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dora_redDotGravity="leftBottom"
        app:dora_redDotRadius="10dp"
        app:dora_redDotVerticesOffset="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <dora.widget.DoraRedDotView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dora_redDotGravity="leftUp"
        app:dora_redDotRadius="10dp"
        app:dora_redDotVerticesOffset="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>